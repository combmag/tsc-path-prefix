{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "pretty": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": [
    "src/__tests__/__fixtures__/monorepo"
  ],
  "include": [
    "node_modules/@stemn/jest-config/typings.d.ts",
    "src",
    "typings.d.ts"
  ],
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ]
}
